<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@mipmap/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gaming.di.numguess.MainActivity">

    <TextView
        android:text=""
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sample_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/textView" />

    <TextView
        android:textColorHighlight="@color/Gray"
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="@color/Gray"
        android:text="@string/desc"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/sample_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="@color/Gray"
        android:text="@string/point_label"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointlabel"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/levellabel"
        android:layout_alignStart="@+id/levellabel" />

    <TextView
        android:textColor="@color/Gray"
        android:text="@string/points"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points"
        android:layout_alignBaseline="@+id/pointlabel"
        android:layout_alignBottom="@+id/pointlabel"
        android:layout_toEndOf="@+id/pointlabel"
        android:layout_marginStart="40dp" />

    <TextView
        android:textColor="@color/Gray"
        android:text="@string/level_label"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levellabel"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/sample_text" />

    <TextView
        android:textColor="@color/Gray"
        android:text="@string/cur_level"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/pointlabel"
        android:layout_alignStart="@+id/points" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="@color/White"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <Button
        android:text="@string/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="ButtonGuess"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginBottom="23dp" />

    <Button
        android:text="@string/button_auto_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:id="@+id/button2"
        android:enabled="false"
        android:onClick="AutoGuess"/>

</RelativeLayout>
